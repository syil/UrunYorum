@using UrunYorum.Data.Entities;
@using UrunYorum.Core;
@using UrunYorum.Base.Enums;
@model IEnumerable<Category>

<ul id="category-menu">
@foreach (Category item in Model) {
    <li>@Html.CreateLink(item.Name, LinkType.CategoryDetail, null, item.RouteMapInfo.Slug)
        @if(item.SubCategories.Count > 0){
            <ul>
                @foreach(Category subItem in item.SubCategories){
                   <li>@Html.CreateLink(subItem.Name, LinkType.CategoryDetail, null, subItem.RouteMapInfo.Slug)</li>
                }
            </ul>
        }
    </li>
}
</ul>