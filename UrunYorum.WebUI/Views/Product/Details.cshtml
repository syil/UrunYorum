@using UrunYorum.Data.Entities;
@using UrunYorum.Core;
@using UrunYorum.Base.Enums;
@model Product

@{
    this.SetTitle(Model.ProductName);
}
<header>
    <h2>@Html.CreateLink(Model.Manufacturer.Name, LinkType.ManufacturerDetail, null, Model.Manufacturer.RouteMapInfo.Slug) @Model.ProductName</h2>
    <h3>Detayı</h3>
</header>
<article>
    <table>
        <tr>
            <td>Ürün Adı</td>
            <td>@Model.ProductName</td>
        </tr>
        <tr>
            <td>Üretici Bilgisi</td>
            <td>
                @Model.Manufacturer.FullName
                <br />
                <a href="@Model.Manufacturer.WebsiteURL">@Model.Manufacturer.WebsiteURL</a>
            </td>
        </tr>
        <tr>
            <td>Ürün Adı</td>
            <td>@Model.ProductName</td>
        </tr>
    </table>
</article>
<hr />
<section>
    @if (Model.Reviews.Count > 0)
    {
         <header>
            <h3>@Model.Reviews.Count yorum var</h3>
        </header>
        int reviewIndex = 1;
        foreach (Review review in Model.Reviews.OrderByDescending(r => r.InsertDate))
        {
            ViewData["ReviewIndex"] = reviewIndex;
            @Html.Partial("../Review/Single", review, ViewData)
            reviewIndex++;
        }
    }
    else
    {
        <span>Yorum Yazılmamış</span>
    }
   
</section>